<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/corner_layout"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageViewOffer"
            android:layout_width="fill_parent"
            android:layout_height="90dp"
            android:layout_marginBottom="4dp"
            android:src="@drawable/medlogo">

        </ImageView>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textViewOffer"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/corner_button"
            android:padding="4dp"
            android:text="In Store"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/textViewOffer"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/imageViewOffer"
            android:background="@drawable/corner_black"
            android:gravity="center"
            android:padding="4dp"
            android:text="Android"
            android:textColor="#fff"
            android:textSize="24sp">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textViewOffer"
            android:layout_marginTop="2dp"
            android:background="@drawable/corner_button_share"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="60">


                <!--  <TextView
                      android:id="@+id/textViewLike"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_margin="1dp"
                      android:layout_weight="15"
                      android:gravity="center"
                      android:paddingLeft="4dp"
                      android:paddingRight="4dp"
                      android:text="@string/icon_like_new"
                      android:textColor="#000"
                      android:textSize="28sp"></TextView>

                  <TextView
                      android:id="@+id/textViewLikeCount"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:paddingLeft="4dp"
                      android:paddingRight="4dp"
                      android:text="10"
                      android:textColor="#000"
                      android:textSize="12sp"></TextView>-->

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="6dp"
                android:layout_weight="20"
                android:gravity="end"
                android:orientation="horizontal">

                <!-- <ImageView
                     android:id="@+id/imageView2"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     android:src="@android:drawable/ic_menu_share" />-->

                <TextView
                    android:id="@+id/textViewShareWith"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:gravity="end"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:text="Share "
                    android:textColor="#000"
                    android:textSize="16sp">

                </TextView>
            </LinearLayout>

            <!--<ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_notification_overlay" />
-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="20">

                <TextView
                    android:id="@+id/textViewWhatsApp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="@string/icon_whatsapp"
                    android:textColor="#179C0D"
                    android:textSize="28sp" />

                <!--<TextView
                    android:id="@+id/textViewFacebook"
                    android:layout_width="wrapcontent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/corner_black"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="@string/icon_fb_one"
                    android:textColor="#fff"
                    android:textSize="30sp" />-->

                <TextView
                    android:id="@+id/textViewFacebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="4dp"
                    android:padding="0dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="@string/icon_fb_one"
                    android:textColor="#3b5998"
                    android:textSize="28sp" />

            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>


